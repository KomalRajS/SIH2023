    const rainLayer = new RainLayer({
      id: "rain",
      source: "rainviewer",
      scale: "noaa",
    });

    // You can get the HTML text for the legend
    const legendHTML = rainLayer.getLegendHTML();

    // You can receive radar data refresh events
